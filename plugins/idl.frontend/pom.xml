<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <relativePath>../..</relativePath>
    <groupId>mil.jpeojtrs.sca</groupId>
    <artifactId>mil.jpeojtrs.sca.parent</artifactId>
    <version>1.10.2-SNAPSHOT</version>
  </parent>

  <artifactId>idl.frontend</artifactId>
  <packaging>eclipse-plugin</packaging>

  <properties>
    <checkstyle.skip>true</checkstyle.skip>
    <pmd.skip>true</pmd.skip>
    <cpd.skip>true</cpd.skip>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-compiler-plugin</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <showDeprecation>false</showDeprecation>
          <showWarnings>false</showWarnings>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <version>2.0.1</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <version>2.5</version>
        <configuration>
          <filesets>
            <fileset>
              <directory>${basedir}/src</directory>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>idlj-maven-plugin</artifactId>
        <version>1.2.1</version>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <debug>true</debug>
          <sourceDirectory>${basedir}/idl/redhawk/FRONTEND</sourceDirectory>
          <outputDirectory>${basedir}/src/</outputDirectory>
          <compiler>idlj</compiler>
          <sources>
            <source>
              <compatible>false</compatible>
              <emitStubs>true</emitStubs>
              <emitSkeletons>true</emitSkeletons>
              <packagePrefixes>
                <packagePrefix>
                  <type>CosNaming</type>
                  <prefix>org.omg</prefix>
                </packagePrefix>
                <packagePrefix>
                  <type>CosEventChannelAdmin</type>
                  <prefix>org.omg</prefix>
                </packagePrefix>
                <packagePrefix>
                  <type>CosEventComm</type>
                  <prefix>org.omg</prefix>
                </packagePrefix>
              </packagePrefixes>
              <additionalArguments>
                <additionalArgument>-nowarn</additionalArgument>
              </additionalArguments>
            </source>
          </sources>
          <includeDirs>
            <includeDir>/usr/share/idl/omniORB</includeDir>
            <includeDir>/usr/share/idl/omniORB/COS</includeDir>
            <includeDir>${basedir}/../idl.cf/idl</includeDir>
            <includeDir>${basedir}/../idl.cf/idl/ossie</includeDir>
            <includeDir>${basedir}/../idl.cf/idl/ossie/CF</includeDir>
            <includeDir>${basedir}/../idl.bulkio/idl</includeDir>
            <includeDir>${basedir}/../idl.bulkio/idl/ossie</includeDir>
            <includeDir>${basedir}/../idl.bulkio/idl/ossie/BULKIO</includeDir>
            <includeDir>${basedir}/idl/</includeDir>
            <includeDir>${basedir}/idl/redhawk</includeDir>
            <includeDir>${basedir}/idl/redhawk/FRONTEND</includeDir>
          </includeDirs>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
